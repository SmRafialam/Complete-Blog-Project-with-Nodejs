<%- include("header") %>

<body>

  <%- include("leftbar") %>


  <%- include("navbar") %>


<div class="br-mainpanel">
    <div class="br-pagetitle">
        <div class="container-fluid p-5">
            <h2 class="text-center text-primary">Add Posts</h2>
            <form method="post" action="/posts/addposts" id="add-form" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="hidden" name="postId">
                    <input name="title" class="form-control" placeholder="Enter title" required>
                </div>
                <div class="form-group">
                    <label for="content">Content:</label>
                    <textarea name="content" class="form-control" placeholder="Enter Content" required></textarea> 
                </div>
                <div class="form-group">
                    <label for="shortDescription">Short Description:</label>
                    <textarea name="shortDescription" id="myTextarea" class="form-control" placeholder="Enter Short Description"></textarea> 
                </div>
                <div class="form-group">
                    <label for="image" >Thumbnail:</label>
                    <input name="image" class="form-control" type="file" required>
                </div>
                <div class="form-group">
                        <label for="featuredItem" class="text-light">Featured Item: </label>
                        <div class="featuredItem form-check form-check-inline">
                            <input type="checkbox" id="radio4" name="featuredItem" value=true >
                            <label for="radio4" >True</label>
                        </div>
                        <div class="featuredItem form-check form-check-inline">
                            <input type="checkbox" id="radio5" name="featuredItem" value=false >
                            <label for="radio5">False</label>
                        </div>
                </div>
                <div class="form-group">
                    <label for="catId" >Category: </label>
                    <select id="multiple-checkboxes" name="catId" class="ui fluid dropdown" multiple="multiple">
                        <% categories.forEach(category => { %>
                            <option value= "<%= category._id %>"> <%= category.title %> </option>
                        <% }); %>
                    </select>
                </div>     
                <div class="form-group py-2">
                    <label for="status" class="text-light">Status: </label>
                    <div class="radio form-check form-check-inline">
                        <input type="radio" id="radio4" name="status" value="Active" required>
                        <label for="radio4" >Active</label>
                    </div>
                    <div class="radio form-check form-check-inline">
                        <input type="radio" id="radio5" name="status" value="Inactive" required>
                        <label for="radio5">Inactive</label>
                    </div>
                </div>
                <div class="form-group py-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>   
            </form>   
        </div>
    </div>
</div>


<%- include("footer") %>
