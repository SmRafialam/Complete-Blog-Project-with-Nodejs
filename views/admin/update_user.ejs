<%- include("header") %>

<body>

  <%- include("leftbar") %>


  <%- include("navbar") %>


<div class="br-mainpanel">
    <div class="br-pagetitle">
        <div class="container-fluid p-5">
            <h2 class="text-center">Update Posts</h2>
            <form method="post" action="/update_user/<%= user._id %>" id="update_user" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input name="title" class="form-control" placeholder="Enter title" value="<%= user.title %>" required>
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <input name="content" type="textarea" class="form-control" placeholder="Enter Content" value="<%= user.content %>" required> 
                </div>
                <div class="form-group">
                    <label for="shortDescription">Short Description</label>
                    <input type="textarea" name="shortDescription" class="form-control" placeholder="Enter Short Description" value="<%= user.shortDescription %>" required>
                </div>
                <div class="form-group">
                    <label for="image" >Thumbnail</label>
                    <input name="image" class="form-control" type="file" value="<%= user.image %>" >
                    <img src="/../../static/uploads/<%= user.image %>" width="100" class="img-thumbnail" my-1>
                </div>
                <input type="hidden" name="old_image" value="<%= user.image %>">
                <div class="form-group py-2">
                    <label for="status" class="text-dark">Status: </label>
                    <div class="radio form-check form-check-inline">
                        <input type="radio" id="radio4" name="status" value="Active"<%= user.status=='Active'?'checked':'' %>>
                        <label for="radio4" >Active</label>
                    </div>
                    <div class="radio form-check form-check-inline">
                        <input type="radio" id="radio5" name="status" value="Inactive"<%= user.status=='Inactive'?'checked':'' %>>
                        <label for="radio5">Inactive</label>
                    </div>
                </div>
                <div class="form-group py-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>   
            </form>   
        </div>
    </div>
</div>


<%- include("footer") %>
