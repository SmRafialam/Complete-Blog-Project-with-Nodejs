<%- include("header") %>

<body>

  <%- include("leftbar") %>


  <%- include("navbar") %>


<div class="br-mainpanel">
    <div class="br-pagetitle">
        <div class="container-fluid p-5">
            <h2 class="text-center">Update Post Details</h2>
            <form method="post" action="/postdetails/update_PostDetails/<%= postdetails._id %>" id="update_postDetails" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="hidden" name="id" value="<%= postdetails._id %>">
                    <input name="title" class="form-control" placeholder="Enter title" value="<%= postdetails.title %>" required>
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <input name="content" type="textarea" class="form-control" placeholder="Enter Content" value="<%= postdetails.content %>" required> 
                </div>
                <div class="form-group">
                    <label for="shortDescription">Short Description</label>
                    <input type="textarea" name="shortDescription" class="form-control" placeholder="Enter Short Description" value="<%= postdetails.shortDescription %>" required>
                </div>
                <div class="form-group">
                    <label for="image" >Thumbnail</label>
                    <input name="image" class="form-control" type="file" value="<%= postdetails.image %>" >
                    <img src="/../../static/uploads/<%= postdetails.image %>" width="100" class="img-thumbnail" my-1>
                </div>
                <input type="hidden" name="old_image" value="<%= postdetails.image %>">
                
                <div class="form-check py-2">
                    <label for="status" class="text-light">Status: </label>
                    <div class="radio form-check form-check-inline">
                        <input type="radio" id="radio4" name="status" value="Active"<%= postdetails.status=='Active'?'checked':'' %>>
                        <label for="radio4" >Active</label>
                    </div>
                    <div class="radio form-check form-check-inline">
                        <input type="radio" id="radio5" name="status" value="Inactive"<%= postdetails.status=='Inactive'?'checked':'' %>>
                        <label for="radio5">Inactive</label>
                    </div>
                </div>
                <div class="form-group py-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>   
            </form>   
        </div>
    </div>
</div>


<%- include("footer") %>
