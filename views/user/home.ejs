              <% posts.forEach(function(post){ %>
                
              <div class="blog-inner-cont bg-image" style="background-image: url('../../static/uploads/<%= post.image %>');">
                <div class="blog-text">
                  <p class="color-white blog-subtitle-s">
                    <%= post.title %>                  </p>
                  <h2 class="color-white blog-subtitle">
                    <%= post.content %>                  </h2>
                  <p class="blog-slider-description color-white">
                    <%= post.shortDescription %>
