                  <div class="blog-slider-btn">
                      <a href="/blogdetails" 
                      class="button button-primary buy-now-lg sk-main__banner-custom-btn"
                    >Read Post</a>
                   
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </figure>
        </article>
      </section>
      <!-- end blog-top -->
      <section class="blog-topic">
